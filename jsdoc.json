{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["."],
        "includePattern": ".js$",
        "exclude": ["node_modules", ".expo-shared", "assets"]
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/"
    } 
}